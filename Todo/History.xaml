<Window x:Class="Todo.History"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo"
        xmlns:converters="clr-namespace:Todo.Converters"
        mc:Ignorable="d"
        Title="History" Height="600" Width="800"  WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:CompletedToColorConverter x:Key="CompletedToColorConverter"/>
        <converters:CompletedToTextDecorationConverter x:Key="CompletedToTextDecorationConverter"/>
    </Window.Resources>

    <Grid  Width="835"
       Height="616"  Margin="-23,0,-31,-31" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="404*" />
            <ColumnDefinition Width="23*" />
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Height="76" Margin="36,10,0,0" VerticalAlignment="Top" Width="75" Source="/image.png"/>
        <ListBox x:Name="historyListBox"
   BorderThickness="0"
   Margin="158,115,323,53"  FontFamily="Actor">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="{Binding IsCompleted, Converter={StaticResource CompletedToColorConverter}}"
        Margin="0,0,0,5"
        CornerRadius="10"
        SnapsToDevicePixels="True">
                        <Grid HorizontalAlignment="Stretch"
          MinHeight="70"
          MaxHeight="90"
          MinWidth="200"
          MaxWidth="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0"
                  VerticalAlignment="Center"
                  Margin="10,0,5,0"
                  IsChecked="{Binding IsCompleted}"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Title}"
                       FontSize="16"
                       Margin="5,0,0,2"
                       TextDecorations="{Binding IsCompleted, Converter={StaticResource CompletedToTextDecorationConverter}}"/>
                                <TextBlock Text="{Binding DueDate, StringFormat=\{0:HH:mm\}}"
                       FontSize="14"
                       Foreground="Gray"
                       Margin="5,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button BorderBrush="{x:Null}"
   Foreground="White"
   Content="+"
   FontSize="24" Height="56"
   VerticalAlignment="Bottom"
   Margin="49,0,0,74" HorizontalAlignment="Left" Width="56">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFFB6B6" Offset="1"/>
                    <GradientStop Color="#FFED3939" Offset="0"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="40">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Content="Дом" Tag="Дом" MouseDown="CategoryLabel_Click" HorizontalAlignment="Left" Margin="158,62,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FF72D600"/>
        <Label Content="Работа" Tag="Работа" MouseDown="CategoryLabel_Click" HorizontalAlignment="Left" Margin="237,62,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFFF5D00"/>
        <Label Content="Учёба" Tag="Учёба" MouseDown="CategoryLabel_Click" HorizontalAlignment="Left" Margin="325,62,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FF004AC3"/>
        <Label Content="Отдых" Tag="Отдых" MouseDown="CategoryLabel_Click" HorizontalAlignment="Left" Margin="405,62,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFB700FF"/>

        <Label Content="История" HorizontalAlignment="Left"
         Margin="29,164,0,0"
         VerticalAlignment="Top" FontSize="18" Background="{x:Null}" Foreground="#FF754600"/>
        <Label Content="Задачи" HorizontalAlignment="Left"
         Margin="36,125,0,0"
         VerticalAlignment="Top" FontSize="18" Background="{x:Null}" Foreground="#FF754600"/>
        <Border x:Name="taskDetailsBorder"
  Margin="501,105,10,34"
  BorderBrush="Black"
  BorderThickness="1"
  CornerRadius="3"
  Visibility="Collapsed" VerticalAlignment="Top" Height="425" >
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" BlurRadius="10" ShadowDepth="3" Opacity="0.7"/>
            </Border.Effect>
            <StackPanel Background="White">
                <TextBlock x:Name="taskTitleTextBlock" FontSize="24" TextAlignment="Center" Margin="0,10,0,15"/>
                <TextBlock x:Name="taskDueDateTextBlock" FontSize="16" TextAlignment="Left" Width="259"/>
                <TextBlock x:Name="taskDescriptionTextBlock" TextWrapping="Wrap" Margin="10,10,10,0" FontSize="16"/>
            </StackPanel>
        </Border>
        <TextBlock Text="{Binding UserName}"
             x:Name="username" HorizontalAlignment="Left" Margin="29,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" FontSize="16" Width="82"/>
    </Grid>



</Window>

